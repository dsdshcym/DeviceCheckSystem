<p id="notice"><%= notice %></p>

<h1>Listing Check Records</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time usage</th>
      <th>Note</th>
      <th>Device plan</th>
      <th>Engineer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @check_records.each do |check_record| %>
      <tr>
        <td><%= check_record.date %></td>
        <td><%= check_record.time_usage %></td>
        <td><%= check_record.note %></td>
        <td><%= check_record.device_plan %></td>
        <td><%= check_record.engineer %></td>
        <td><%= link_to 'Show', check_record %></td>
        <td><%= link_to 'Edit', edit_check_record_path(check_record) %></td>
        <td><%= link_to 'Destroy', check_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

